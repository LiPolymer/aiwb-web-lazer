---
interface Props {
  status: 'active' | 'discountinued' | 'paused'
}

const { status, ...props } = Astro.props
---

<Fragment>
    <div class:list={["px-1.75 py-0.35 gap-x-1.5 rounded-md flex flex-row items-center",
        status === "active" && "dark:bg-green-800:50 bg-green-300:50",
        status === "discountinued" && "dark:bg-zinc-800:50 bg-zinc-300:50",
        status === "paused" && "dark:bg-yellow-800:50 bg-yellow-300:50",
    ]}>
        <span class='relative flex items-center justify-center opacity-60'>
          <span class:list={['absolute rounded-full border',
          status === 'active' || status === 'paused' ? 'animate-ping': "",
          status === "paused" ? "animate-duration-[3s]": "",
          status === "active" ? "size-2.25 dark:border-green-400 border-green-600 dark:bg-green-400 bg-green-600 opacity-75" : status === "discountinued" ? "size-0 border-zinc-400 bg-zinc-400 opacity-0" : "size-2.25 dark:border-yellow-400 dark:bg-yellow-400 border-yellow-600 bg-yellow-600 opacity-25"]}></span>
          <span class:list={['size-2.25 rounded-full',
            status === "active" ? "dark:bg-green-400 bg-green-600" : status === "discountinued" ? "bg-zinc-400 dark:opacity-75 opacity-50" : "bg-yellow-600 opacity-75"
          ]}></span>
        </span>
        <div class:list={['font-normal text-xs',
        status === "active" && "dark:text-green-300:85 text-green-700:85",
        status === "discountinued" && "dark:text-zinc-300:85 text-zinc-700:50",
        status === "paused" && "dark:text-yellow-300:85 text-yellow-600:85",
        ]}>{status === "active"? "活跃" : status === "discountinued"? "停更": "暂缓"}</div>
      </div>
</Fragment>